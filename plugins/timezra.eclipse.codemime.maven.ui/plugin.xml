<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="timezra.eclipse.codemime.core.ui.category"
            id="timezra.eclipse.codemime.maven.ui.commands.copyTextAsHtml"
            name="%copyAsHtmlLabel">
      </command>
      <command
            categoryId="timezra.eclipse.codemime.core.ui.category"
            id="timezra.eclipse.codemime.maven.ui.commands.copyFileAsHtml"
            name="%copyAsHtmlLabel">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="timezra.eclipse.codemime.xml.ui.commands.CopyXmlTextAsHtml"
            commandId="timezra.eclipse.codemime.maven.ui.commands.copyTextAsHtml">
      </handler>
      <handler
            class="timezra.eclipse.codemime.xml.ui.commands.CopyXmlFileAsHtml"
            commandId="timezra.eclipse.codemime.maven.ui.commands.copyFileAsHtml">
      </handler>
   </extension>
   <!-- FIXME: need to find a better way to bind the command to a key sequence
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="timezra.eclipse.codemime.maven.ui.commands.copyTextAsHtml"
            contextId="org.eclipse.wst.sse.ui.structuredTextEditorScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+M H">
      </key>
   </extension>
   -->
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.maven.ide.eclipse.pomFile.source.EditorContext?after=group.edit">
         <menu
               icon="icons/full/etool16/copy_as_html_edit.gif"
               id="timezra.eclipse.codemime.maven.ui.copyTextAs"
               label="%copyAsLabel"
               mnemonic="C">
            <command
                  commandId="timezra.eclipse.codemime.maven.ui.commands.copyTextAsHtml"
                  disabledIcon="icons/full/dtool16/copy_as_html_edit.gif"
                  icon="icons/full/etool16/copy_as_html_edit.gif"
                  mnemonic="H">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=group.edit">
         <menu
               icon="icons/full/etool16/copy_as_html_edit.gif"
               id="timezra.eclipse.codemime.ui.copyFileAsHtmlMenu"
               label="%copyAsLabel"
               mnemonic="C">
            <command
                  commandId="timezra.eclipse.codemime.maven.ui.commands.copyFileAsHtml"
                  disabledIcon="icons/full/dtool16/copy_as_html_edit.gif"
                  icon="icons/full/etool16/copy_as_html_edit.gif"
                  mnemonic="H">
               <visibleWhen
                     checkEnabled="false">
                  <and>
                     <count
                           value="1">
                     </count>
                    <iterate
                          ifEmpty="false"
                          operator="and">
                       <instanceof
                             value="org.eclipse.core.resources.IFile">
                       </instanceof>
                       <test
                             property="org.eclipse.core.resources.contentTypeId"
                             value="org.maven.ide.eclipse.pomFile">
                       </test>
                    </iterate>
                  </and>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
</plugin>
